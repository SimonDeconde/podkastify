{
  "cSpell.words": ["trpc"],

  // Set editor ruler at 90 characters to match our preferred column length.
  "editor.rulers": [90],

  // Colorize bracket pairs with guides.
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",

  // Always format on save.
  "editor.formatOnSave": true,

  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.fixAll.stylelint": "explicit",
    "source.organizeImports": "explicit"
  },

  "files.trimTrailingWhitespace": true,

  // Ignore "Unknown at rule @import-normalize css(unknownAtRules)" error in global.css.
  "css.lint.unknownAtRules": "ignore",

  // ESLint configs.
  "eslint.validate": ["javascript", "typescript", "typescriptreact"],
  "eslint.workingDirectories": [{ "mode": "auto" }],
  "eslint.format.enable": true,
  "eslint.experimental.useFlatConfig": false,

  // Ignore autogenerated files in search results.
  // "search.exclude": {
  //   "**/autogenerated": true,
  //   "**/bedrock-api-client": true,
  //   "**/sequence-api-client": true,
  //   "**/dist": true,
  //   "**/node_modules": true
  // },

  // Stylelint configs.
  "stylelint.validate": [
    "css",
    "scss",
    "javascript",
    "typescript",
    "typescriptreact"
  ],
  "stylelint.packageManager": "pnpm",

  // VSCode's default configuration automatically inserts `@param` and `@returns`
  // parameters in JSDoc comments. Currently, we're choosing to *not* enforce compliance
  // with JSDoc because Typescript's type-checking gets us most of the benefits without
  // the extra overhead of maintaining accurate JSDoc comments.
  "javascript.suggest.completeJSDocs": false,
  "typescript.suggest.completeJSDocs": false,

  // TODO-Tree configs.
  // "todo-tree.general.tags": ["CLEANUP", "TODO", "IMPROVEMENT", "HACK"],
  // "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|\\* |^|^\\s*(-|\\d+.))\\s*($TAGS)",

  // TODO: `enablePromptUseWorkspaceTsdk` is the best setting we currently have in vscode
  // to help us avoid using the wrong version of typescript. There is an open issue to
  // push this further and automatically enable.
  // Ref: https://github.com/microsoft/vscode/issues/135713
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "typescript.tsdk": "node_modules/typescript/lib"
}
